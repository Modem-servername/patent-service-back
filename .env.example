# PostgreSQL Database Credentials
DB_HOST=db  # Use 'localhost' for local development, 'db' for Docker
DB_USER=myuser
DB_PASSWORD=mysecretpassword
DB_NAME=patent_db

# Other API Keys & Secrets
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# Application Settings
USE_IMAGE_MODE=true
MAX_PAGES_PER_BATCH=30
MAX_IMAGE_SIZE=2048

# Authentication
ADMIN_PASSWORD=your-secure-admin-password-here
JWT_SECRET_KEY=your-random-jwt-secret-key-at-least-64-characters-long

# CORS Settings (comma-separated origins, or * for all)
CORS_ORIGINS=http://localhost:5173,http://localhost:5000,http://localhost:3000
